{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "ES6",
    "target": "ES6",
    "lib": ["ES6", "DOM"],

    // Other Outputs
    "sourceMap": true,

    // Stricter Typechecking Options
    "strict": true,

    // Module Resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}